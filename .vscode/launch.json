{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[go] Launch package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "go:get"
        },
        {
            "name": "[go] Launch current file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}"
        },
        {
            "name": "[go] Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}"
        },
        {
            "name": "[go] Benchmark",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.bench=.",
                // "-test.benchmem",
                //"-test.benchtime=3s",
                //"-test.cpuprofile=cpu.out",
                //"-test.memprofile=mem.out",
                "-test.count",
                "3"
            ]
        },
        {
            "name": "[go] Attach",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ]
}